<script
  src="https://code.jquery.com/jquery-3.2.1.min.js"
  integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4="
  crossorigin="anonymous">
</script>



<script>

var isUnder21=false;
//check for under 21.
$('input[name="date-of-birth"]').blur(function(){
dob = new Date(this.value);
var today = new Date();
var age = Math.floor((today-dob) / (365.25 * 24 * 60 * 60 * 1000));
if(age<18 && age>=0){
isUner25 = true;
$(".under-21-notice").hide().html("Under 18 clients need parental consent. You will need to provide your parent/guardian's details later.").show('medium');
$(".parental-consent").show('slow');
$('input[name="parent-name"]').prop('required',true);
$('input[name="parent-mobile"]').prop('required',true);
$('input[name="parent-email"]').prop('required',true);
$('input[name="agreed-parent-consent"]').prop('required',true);
}
else if(age<0){
isUnder25 = true;
$(".under-21-notice").hide().html("Please enter valid date").show('medium');
this.value='';
}
else{
isUnder25 = false;
$(".under-21-notice").hide('slow');
$('input[name="parent-name"]').prop('required',false);
$('input[name="parent-mobile"]').prop('required',false);
$('input[name="parent-email"]').prop('required',false);
$('input[name="agreed-parent-consent"]').prop('required',false);
$(".parental-consent").hide('slow');
}

});


//check for session date validity
$('input[name="sessiondate"]').blur(function(){
sessiondate = new Date(this.value);
var today = new Date();

if(today>sessiondate){
$(".session-date-warning").hide().html("Past date not allowed.").show('medium');
this.value='';
}
else{
$(".session-date-warning").hide('slow');
}
});

/// check requirements for parental consent

//dynamically populate the name for aggrement of terms and conditions
$('input[name="firstname"]').blur(function(){$(".acceptor-name").html(", "+this.value+" "+ $('input[name="lastname"]').val() ); });

$('input[name="lastname"]').blur(function(){ 
$(".acceptor-name").html(", "+$('input[name="firstname"]').val()+" "+this.value+", ");
});

// dynamic field for parent's name 
$('input[name="parent-name"]').blur(function(){

$(".parent-acceptor-name").html(", "+this.value+", ");

});


</script>




